<Window x:Class="WPF_GameConsole.MainWindow"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
		xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:local="clr-namespace:WPF_GameConsole"
		mc:Ignorable="d"
		KeyDown="Window_KeyDown"
		Background="Transparent"
		ResizeMode="NoResize"
		WindowStyle="None"
		Height="400"
		Width="850"
		Title="">

	<Window.Resources>
		<SolidColorBrush x:Key="ConsoleMain"
						 Color="DarkSlateGray" />
		<SolidColorBrush x:Key="ControlLeft"
						 Color="DeepSkyBlue" />
		<SolidColorBrush x:Key="ControlRight"
						 Color="Crimson" />
		<SolidColorBrush x:Key="GameText"
						 Color="White" />
	</Window.Resources>

	<Grid Background="Transparent">
		<Grid.RowDefinitions>
			<RowDefinition Height="40" />
			<RowDefinition Height="*" />
			<RowDefinition Height="40" />
		</Grid.RowDefinitions>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="100" />
			<ColumnDefinition Width="40" />
			<ColumnDefinition Width="*" />
			<ColumnDefinition Width="40" />
			<ColumnDefinition Width="100" />
		</Grid.ColumnDefinitions>
		<Border Grid.Row="0"
				Grid.Column="2"
				Background="{StaticResource ConsoleMain}"
				MouseLeftButtonDown="console_MouseLeftButtonDown"
				Panel.ZIndex="3">
			<Grid Background="Transparent">
				<Label x:Name="windowMenuTitle"
					   Content="Flappy Bird™️"
					   Width="400"
					   Height="30"
					   FontSize="18"
					   FontWeight="Bold"
					   Margin="0,0,0,0"
					   Foreground="Black"
					   FontFamily="Broadway"
					   VerticalAlignment="Center"
					   HorizontalAlignment="Left"
					   VerticalContentAlignment="Center"
					   HorizontalContentAlignment="Left" />
				<Button x:Name="btnClose"
						Content="❌"
						Width="36"
						Height="24"
						Margin="0,0,0,0"
						Background="RosyBrown"
						Foreground="White"
						BorderThickness="0"
						VerticalAlignment="Center"
						HorizontalAlignment="Right"
						Click="btnClose_Click" />
				<Button x:Name="btnBack"
						Content="◀️"
						Width="36"
						Height="24"
						Margin="0,0,40,0"
						Background="Gray"
						Foreground="White"
						BorderThickness="0"
						VerticalAlignment="Center"
						HorizontalAlignment="Right"
						Click="btnBack_Click" />
			</Grid>
		</Border>
		<Border Grid.Row="1"
				Grid.Column="0"
				Panel.ZIndex="2"
				Background="{StaticResource ControlLeft}"
				MouseLeftButtonDown="console_MouseLeftButtonDown">
		</Border>
		<Border Grid.Row="0"
				Grid.Column="0"
				Panel.ZIndex="2"
				Background="{StaticResource ControlLeft}"
				CornerRadius="40,0,0,0"
				MouseLeftButtonDown="console_MouseLeftButtonDown">
		</Border>
		<Border Grid.Row="2"
				Grid.Column="0"
				Panel.ZIndex="2"
				Background="{StaticResource ControlLeft}"
				CornerRadius="0,0,0,40"
				MouseLeftButtonDown="console_MouseLeftButtonDown">
		</Border>
		<Border Grid.Row="1"
				Grid.Column="4"
				Panel.ZIndex="2"
				Background="{StaticResource ControlRight}"
				MouseLeftButtonDown="console_MouseLeftButtonDown">
		</Border>
		<Border Grid.Row="0"
				Grid.Column="4"
				Panel.ZIndex="2"
				Background="{StaticResource ControlRight}"
				CornerRadius="0,40,0,0"
				MouseLeftButtonDown="console_MouseLeftButtonDown">
		</Border>
		<Border Grid.Row="2"
				Grid.Column="4"
				Panel.ZIndex="2"
				Background="{StaticResource ControlRight}"
				CornerRadius="0,0,40,0"
				MouseLeftButtonDown="console_MouseLeftButtonDown">
		</Border>
		<Border Grid.RowSpan="3"
				Grid.Column="1"
				Background="{StaticResource ConsoleMain}"
				Panel.ZIndex="1"
				MouseLeftButtonDown="console_MouseLeftButtonDown">
		</Border>
		<Border Grid.RowSpan="3"
				Grid.Column="3"
				Background="{StaticResource ConsoleMain}"
				Panel.ZIndex="1"
				MouseLeftButtonDown="console_MouseLeftButtonDown">
		</Border>
		<Border Grid.Row="3"
				Grid.Column="2"
				Background="{StaticResource ConsoleMain}"
				Panel.ZIndex="1"
				MouseLeftButtonDown="console_MouseLeftButtonDown">
		</Border>

		<Grid x:Name="screen_Menu"
			  Grid.Row="1"
			  Grid.Column="2"
			  Background="DarkKhaki"
			  Visibility="Hidden">
			<Grid.RowDefinitions>
				<RowDefinition Height="*" />
				<RowDefinition Height="4*" />
				<RowDefinition Height="0.5*" />
			</Grid.RowDefinitions>
			<Viewbox Grid.Row="0"
					 Stretch="Uniform">
				<Label Content="Flappy Bird™️"
					   FontWeight="Bold"
					   Foreground="Black"
					   Background="Transparent"
					   FontFamily="Broadway"
					   VerticalContentAlignment="Center"
					   HorizontalContentAlignment="Center" />
			</Viewbox>
			<Grid Grid.Row="1">
				<Viewbox Stretch="Uniform">
					<Grid Background="Transparent"
						  Width="250">
						<Grid.RowDefinitions>
							<RowDefinition Height="*" />
							<RowDefinition Height="*" />
							<RowDefinition Height="*" />
						</Grid.RowDefinitions>

						<Button Grid.Row="0"
								Content="Play"
								FontSize="24"
								Background="DimGray"
								Foreground="{StaticResource GameText}"
								FontFamily="Broadway"
								BorderThickness="0"
								VerticalAlignment="Stretch"
								HorizontalAlignment="Stretch"
								Margin="0,5,0,5"
								Click="btnPlay_Click">
						</Button>
						<Button Grid.Row="1"
								Content="???"
								FontSize="24"
								Background="DimGray"
								Foreground="{StaticResource GameText}"
								FontFamily="Broadway"
								BorderThickness="0"
								VerticalAlignment="Stretch"
								HorizontalAlignment="Stretch"
								Margin="0,5,0,5">
						</Button>
						<Button Grid.Row="2"
								Content="???"
								FontSize="24"
								Background="DimGray"
								Foreground="{StaticResource GameText}"
								FontFamily="Broadway"
								BorderThickness="0"
								VerticalAlignment="Stretch"
								HorizontalAlignment="Stretch"
								Margin="0,5,0,5">
						</Button>
					</Grid>
				</Viewbox>
			</Grid>
			<Viewbox Grid.Row="2"
					 Stretch="Uniform">
				<Label Content="Made by: Marcell Csengeri in 2026 ©️"
					   FontWeight="Bold"
					   Foreground="Black"
					   Background="Transparent"
					   FontFamily="Broadway"
					   VerticalContentAlignment="Center"
					   HorizontalContentAlignment="Center" />
			</Viewbox>
		</Grid>
		<Grid x:Name="screen_Game"
			  Grid.Row="1"
			  Grid.Column="2"
			  Background="DarkKhaki"
			  Visibility="Visible">
			<Viewbox x:Name="spaceToStartInfo"
					 Panel.ZIndex="2"
					 Margin="70"
					 Stretch="Uniform"
					 Visibility="Hidden">
				<Label Content="Press space to start"
					   FontWeight="Bold"
					   Foreground="{StaticResource GameText}"
					   Background="Transparent"
					   FontFamily="Calibri" />
			</Viewbox>
			<Grid Panel.ZIndex="2">
				<Grid.RowDefinitions>
					<RowDefinition Height="*" />
					<RowDefinition Height="3.5*" />
				</Grid.RowDefinitions>
				<Viewbox x:Name="scoreInfo"
						 Stretch="Uniform"
						 Visibility="Visible">
					<Label Content="0"
						   FontWeight="Bold"
						   Foreground="{StaticResource GameText}"
						   Background="Transparent"
						   FontFamily="Calibri"
						   VerticalContentAlignment="Center"
						   HorizontalContentAlignment="Center" />
				</Viewbox>
			</Grid>
			<Canvas x:Name="GameCanvas"
					ClipToBounds="True"
					Panel.ZIndex="1">
				<Image x:Name="Bird"
					   Width="70"
					   Height="70"
					   Visibility="Hidden"
					   Source="/Images/Actor_Bird.png" />
			</Canvas>

		</Grid>
	</Grid>
</Window>